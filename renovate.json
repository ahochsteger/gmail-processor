{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "schedule": ["on thursday"],
  "packageRules": [
    {
      "description": "Github workflow dependencies",
      "matchFileNames": [
        ".github/workflows/*.yaml",
        "devbox.json",
        ".devcontainer/Dockerfile"
      ],
      "groupName": "other-non-major",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "semanticCommitType": "build"
    },
    {
      "description": "Github workflow dependencies",
      "matchFileNames": [
        ".github/workflows/*.yaml",
        "devbox.json",
        ".devcontainer/Dockerfile"
      ],
      "groupName": "other-major",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "semanticCommitType": "build"
    },
    {
      "description": "Primary package.json dependencies",
      "matchFileNames": ["package.json"],
      "groupName": "libs-non-major",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "description": "Primary package.json dependencies",
      "matchFileNames": ["package.json"],
      "groupName": "libs-major",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Docs package.json dependencies",
      "matchFileNames": ["docs/package.json"],
      "groupName": "docs-non-major",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "semanticCommitType": "chore"
    },
    {
      "description": "Docs package.json dependencies",
      "matchFileNames": ["docs/package.json"],
      "groupName": "docs-major",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "semanticCommitType": "chore"
    }
  ]
}
